<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_event_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.srdtu.srdtu.EventViewer"
    tools:showIn="@layout/activity_event_viewer">



    <ScrollView
        android:layout_margin="5dp"
        android:background="#AA000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    
            <ImageView
                android:id="@+id/viewer_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/eu"/>

            <TextView
                android:id="@+id/viewer_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eureka"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="23sp"
                android:typeface="serif"
                android:textColor="@color/colorviewertext"/>

            <TextView
                android:id="@+id/viewer_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorviewertext"/>

            <TextView
                android:id="@+id/viewer_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12/2/2017"
                android:typeface="monospace"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/colorviewertext"/>

            <TextView
                android:id="@+id/viewer_venue_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Venue :"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorviewertext"/>

            <TextView
                android:id="@+id/viewer_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OAT"
                android:typeface="monospace"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/colorviewertext"/>

            <TextView
                android:id="@+id/viewer_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorviewertext"/>

            <TextView
                android:id="@+id/viewer_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Chasing1"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/colorviewertext"
                android:autoLink="all"/>

            <Button
                android:id="@+id/viewer_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/colorAccent"
                android:textSize="15sp"
                android:longClickable="true"
                android:text="R E G I S T E R"
                android:typeface="monospace"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
